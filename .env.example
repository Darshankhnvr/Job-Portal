# Backend Environment Variables (.env file in backend directory)

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/jobportal?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Arcjet Configuration (Rate Limiting & Security)
ARCJET_KEY=ajkey_your_arcjet_api_key_here

# CORS Configuration
CORS_ORIGIN=https://your-frontend-url.azurewebsites.net

# Frontend Environment Variables (.env file in frontend directory)

# API URL
VITE_API_URL=https://your-backend-url.azurewebsites.net/api
